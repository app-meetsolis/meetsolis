# Real Services - External API Keys
# Clerk Authentication
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# Clerk Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding
CLERK_HOME_URL=/dashboard

# Clerk Webhook Secret (OPTIONAL for development, REQUIRED for production)
# Get from: https://dashboard.clerk.com → Webhooks → Add Endpoint
# See WEBHOOK_SETUP.md for complete setup instructions
# If not set, users will be auto-created on first API call (fallback)
CLERK_WEBHOOK_SECRET=

NEXT_PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=

OPENAI_API_KEY=
DEEPL_API_KEY=

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

GOOGLE_CALENDAR_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Analytics - PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Analytics - Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Analytics - Hotjar
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_HOTJAR_SV=6

# Analytics - Sentry
# Get your DSN from: https://sentry.io/settings/[your-org]/projects/[your-project]/keys/
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Sentry Source Map Upload (Required for readable production error stack traces)
# Without these, production errors will show minified code instead of actual file names and line numbers
# Organization slug: https://sentry.io/organizations/[YOUR-ORG-SLUG]/
SENTRY_ORG=
# Project name: https://sentry.io/settings/[ORG]/projects/[PROJECT]/
SENTRY_PROJECT=
# Auth token: https://sentry.io/settings/account/api/auth-tokens/
# Required scopes: project:read, project:releases, org:read
SENTRY_AUTH_TOKEN=

# Analytics - App Version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Alerting - Slack
SLACK_WEBHOOK_URL=

# Service Configuration
USE_MOCK_SERVICES=true
NEXT_PUBLIC_USE_MOCK_SERVICES=true
NODE_ENV=development

# Circuit Breaker & Retry Configuration
SERVICE_TIMEOUT_MS=5000
CIRCUIT_BREAKER_THRESHOLD=5
RETRY_ATTEMPTS=3
BACKOFF_MULTIPLIER=2

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000
ENABLE_SERVICE_MONITORING=true

# WebRTC Configuration
TURN_SERVER_URL=
TURN_SERVER_USERNAME=
TURN_SERVER_CREDENTIAL=

# Security
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# Rate Limiting - Upstash Redis (REQUIRED for production)
# Get free credentials at: https://upstash.com
# Used for distributed rate limiting across serverless instances
# Without these, rate limiting will be disabled (development only)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=